    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenGL",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildOpenGL",
            "program": "${workspaceFolder}/src/DungeonSlime.OpenGL/bin/Debug/net9.0/DungeonSlime.OpenGL.dll",
            "args": [
                "-p",
                "OpenGL"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Debug DirectX",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildDirectX",
            "program": "${workspaceFolder}/src/DungeonSlime.DirectX/bin/Debug/net9.0-windows/DungeonSlime.DirectX.dll",
            "args": [
                "-p",
                "DirectX"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
    ]
}